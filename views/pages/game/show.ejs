<%- layout('layouts/boilerplate') %>

<% if (game !== undefined) { %>
<div class="card bg-secondary" style="width: 100%">
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-secondary text-white">
      <a href="/games"><img src="/assets/arrow-left.svg" /></a>
    </li>

    <li class="list-group-item bg-secondary text-white">
      <h1>Game</h1>
    </li>

    <li class="list-group-item bg-secondary text-white">
      Name: <%= game.name %>
    </li>


    <li class="list-group-item bg-secondary text-white">
      Duration (minutes): <%=game.duration%>
    </li>

    <li class="list-group-item bg-secondary text-white">
      Team size: <%=game.team_size%>
    </li>
  </ul>

  <div class="card-body d-flex">
    <a class="btn btn-success me-1" href="/games/<%=game.game_id%>/edit">Edit</a>
    <form action="/games/<%=game.game_id%>/delete" method="post">
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>
<% } else { %>
<div class="card bg-secondary" style="width: 100%">
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-secondary text-white">
      <h1>Error</h1>
    </li>
    <li class="list-group-item bg-secondary text-white">
      There is no game with an id of "<%=id%>"
    </li>
  </ul>
</div>
<% } %>