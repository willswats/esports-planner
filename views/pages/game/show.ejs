<%- layout('layouts/boilerplate') %>

<!-- prettier-ignore -->
<% if (game !== undefined) { %>
<h1><%= game.name %></h1>
<ul>
  <li>Duration: <%=game.duration%></li>
  <li>Team size: <%=game.team_size%></li>
</ul>

<div class="d-flex">
  <a class="btn btn-success me-1" href="/games/<%=game.game_id%>/edit">Edit</a>
  <form action="/games/<%=game.game_id%>/delete" method="post">
    <button class="btn btn-danger">Delete</button>
  </form>
</div>
<% } else { %>
<h1>There is no player with an id of "<%=id%>"</h1>
<% } %>
