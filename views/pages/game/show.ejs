<%- layout('layouts/boilerplate') %>

<% if (game !== undefined) { %>
<div class="card bg-secondary" style="width: 100%">
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-secondary text-white">
      <p>Name:</p>
      <p class="list-group-item bg-secondary text-white my-2 rounded">
        <%= game.name %>
      </p>
    </li>

    <li class="list-group-item bg-secondary text-white">
      <p>Duration:</p>
      <p class="list-group-item bg-secondary text-white my-2 rounded">
        <%=game.duration%>
      </p>
    </li>

    <li class="list-group-item bg-secondary text-white">
      <p>Team size:</p>
      <p class="list-group-item bg-secondary text-white my-2 rounded">
        <%=game.team_size%>
      </p>
    </li>
  </ul>

  <div class="card-body d-flex">
    <a class="btn btn-success me-1" href="/games/<%=game.game_id%>/edit">Edit</a>
    <form action="/games/<%=game.game_id%>/delete" method="post">
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>
<% } else { %>
<div class="card bg-secondary" style="width: 100%">
  <div class="card-body">
    <h1>Error</h1>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-secondary text-white">
      <p class="list-group-item bg-secondary text-white my-1 rounded">There is no game with an id of "<%=id%>"</p>
    </li>
  </ul>
</div>
<% } %>