<%- layout('layouts/boilerplate') %>

<% if (game !== undefined) { %>
<div class="card bg-secondary text-white" style="width: 100%">
  <div class="card-body">
    <h5 class="card-title"><%= game.name %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-secondary text-white">
      Duration: <%=game.duration%>
    </li>
    <li class="list-group-item bg-secondary text-white">
      Team size: <%=game.team_size%>
    </li>
  </ul>
  <div class="card-body d-flex">
    <a class="btn btn-success me-1" href="/games/<%=game.game_id%>/edit">Edit</a>
    <form action="/games/<%=game.game_id%>/delete" method="post">
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>

<% } else { %>
<h1>There is no player with an id of "<%=id%>"</h1>
<% } %>