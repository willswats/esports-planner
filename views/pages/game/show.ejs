<%- layout('layouts/boilerplate') %>

<!-- prettier-ignore -->
<% if (result !== undefined && result.length > 0) { %>
<h1><%= result[0].name %></h1>
<ul>
  <li>Duration: <%=result[0].duration%></li>
  <li>Team size: <%=result[0].team_size%></li>
</ul>

<div class="d-flex">
  <a class="btn btn-success me-1" href="/games/<%=result[0].game_id%>/edit"
    >Edit</a
  >
  <form action="/games/<%=result[0].game_id%>/delete" method="post">
    <button class="btn btn-danger">Delete</button>
  </form>
</div>
<% } else { %>
<h1>There is no country with an id of "<%=id%>"</h1>
<% } %>
