<%- layout('layouts/boilerplate') %>

<% if (game !== undefined) { %>
<div class="card bg-secondary text-white" style="width: 100%">
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-secondary text-white">
      <p>Name:</p>
      <p class="list-group-item text-white bg-secondary my-1 rounded">
        <%= game.name %>
      </p>
    </li>

    <li class="list-group-item bg-secondary text-white">
      <p>Duration:</p>
      <p class="list-group-item text-white bg-secondary my-1 rounded">
        <%=game.duration%>
      </p>
    </li>

    <li class="list-group-item bg-secondary text-white">
      <p>Team size:</p>
      <p class="list-group-item text-white bg-secondary my-1 rounded">
        <%=game.team_size%>
      </p>
    </li>
  </ul>
  <div class="card-body d-flex">
    <a class="btn btn-success me-1" href="/games/<%=game.game_id%>/edit">Edit</a>
    <form action="/games/<%=game.game_id%>/delete" method="post">
      <button class="btn btn-danger">Delete</button>
    </form>
  </div>
</div>

<% } else { %>
<div class="card bg-secondary text-white mb-2" style="width: 100%">
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-secondary text-white">
      <p>There is no game with an id of "<%=id%>"</p>
    </li>
  </ul>
</div>
<% } %>