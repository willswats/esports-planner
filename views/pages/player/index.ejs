<%- layout('layouts/boilerplate') %>

<h1>Players</h1>
<a class="btn btn-primary my-2" href="players/add">Add player</a>
<ul>
  <!-- prettier-ignore -->
  <% if (players.length > 0) { %>
  <% players.map((player) => { %>
  <li><a href="players/<%=player.player_id%>"><%=player.name%></a></li>
  <!-- prettier-ignore -->
  <% }) %>
  <% } %>
</ul>
