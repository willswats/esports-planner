<%- layout('layouts/boilerplate') %>

<form action="/players/add" method="post" novalidate onsubmit="return validateFormPlayer()">
  <div class="card bg-secondary" style="width: 100%">
    <ul class="list-group list-group-flush">
      <li class="list-group-item bg-secondary text-white">
        <a href="/players"><img src="/assets/arrow-left.svg" /></a>
      </li>

      <li class="list-group-item bg-secondary text-white">
        <h1>Add Player</h1>
      </li>

      <li class="list-group-item bg-secondary text-white">
        <label for="input-name">Name:</label>
        <input class="form-control my-2" id="input-name" type="text" name="name" />
        <p class="text-danger" id="p-error-name"></p>
      </li>

      <li class="list-group-item bg-secondary text-white">
        <label for="input-email">Email:</label>
        <input class="form-control my-2" id="input-email" type="text" name="email" />
        <p class="text-danger" id="p-error-email"></p>
      </li>
    </ul>

    <li class="list-group-item bg-secondary text-white">
      Specialisations:
      <% if (games.length > 0) { %>
      <% games.map((game) => { %>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" name="game_id" id="<%= game.game_id %>" value="<%= game.game_id %>" for="<%= game.game_id %>">
        <label class="form-check-label" for="<%= game.game_id %>">
          <%= game.name %>
        </label>
      </div>
      <% }) %>
      <% } else { %>
      There are currently no games, add them on the
      <a href="/games">games</a> page.
      <% } %>
    </li>

    <div class="card-body d-flex">
      <button class="btn btn-success my-2" type="submit">Submit</button>
    </div>
  </div>
</form>

<script src="/scripts/validateFormPlayer.js"></script>